<script>
    var currentLocation = '{{location.path}}'

    document.getElementById('locationChanger').addEventListener('change', async (event) => {
        window.location.href = window.location.href.replace(currentLocation, event.target.value)
    })

    document.getElementById('localeChanger').addEventListener('change', async (event) => {
        const slugs = window.location.pathname.substring(1, window.location.pathname.length).split('/')
        slugs[0] = event.target.value
        const newUrl = window.location.origin + '/' + slugs.join('/')
        window.location.href = newUrl;
    })
</script>

