<div class="row d-flex flex-row justify-content-center">
    <div class="col-9">
        <div class="d-flex flex-row justify-content-end">
            <button class="btn btn-primary" id="createBtn">Create new ad</button>
        </div>
        {{#each ads}}
        <div class="card my-2">
            <div class="card-header fw-bold d-flex flex-row justify-content-between">
                <div>{{this.title}}</div>
                <div>{{this.status}}</div>
            </div>
            <div class="card-body">
                <div class="card-text">
                    {{this.description}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script>
    document.getElementById('createBtn').addEventListener('click', async function (event) {

        let title = "My ad title"
        let description = "My ad description"

        event.preventDefault()
        const res = await fetch('/ads/create', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ title, description }),
        })
        console.log(res)
    })
</script>