<form>
    <input id="emailLoginField" type="text" name="email" />
    <input id="passwordLoginField" type="password" name="password" />
    <button id="loginButton">Login</button>
</form>

<script>
    let email
    let password

    document.getElementById('emailLoginField').addEventListener('input', function(event) {
        email = event.target.value
    })
    document.getElementById('passwordLoginField').addEventListener('input', function(event) {
        password = event.target.value
    })

    document.getElementById('loginButton').addEventListener('click', async function (event) {
        event.preventDefault()
        const res = await fetch('/auth/login', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ email, password }),
        })
        console.log(res)
    })
</script>